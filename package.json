    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-flowtype-errors": "^3.0.0",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.63.1",
    "jest-cli": "^22.1.4",
    "lerna": "^2.7.0",
    "opn-cli": "^3.1.0"
